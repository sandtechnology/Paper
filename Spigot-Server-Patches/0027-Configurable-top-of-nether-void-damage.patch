     protected void E() {
         if (this.portalCooldown > 0) {
             --this.portalCooldown;
@@ -493,6 +511,7 @@ public abstract class Entity implements INamableTileEntity, ICommandListener, Ke
         this.fireTicks = 0;
     }
 
+    protected final void doVoidDamage() { this.af(); } // Paper - OBFHELPER
     protected void af() {
         this.die();
     }
